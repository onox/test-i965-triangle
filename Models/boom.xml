<PropertyList>

    <path>boom.ac</path>

    <!-- Disable collisions with other aircraft -->
    <animation>
        <enable-hot type="bool">false</enable-hot>
    </animation>

    <offsets>
        <x-m>16.15</x-m>
        <z-m>-0.6614</z-m>
    </offsets>

    <!-- Pitch -->
    <animation>
        <type>rotate</type>
        <property>engines/engine[9]/n2</property>
        <factor>1</factor>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <!-- Yaw -->
    <animation>
        <type>rotate</type>
        <property>engines/engine[9]/n1</property>
        <factor>-1</factor>
        <axis>
            <z>1</z>
        </axis>
    </animation>

    <!-- Length -->
    <animation>
        <type>translate</type>
        <object-name>refuel-tube</object-name>
        <property>engines/engine[9]/rpm</property>
        <factor>1</factor>
        <axis>
            <x>1</x>
        </axis>
    </animation>

</PropertyList>
