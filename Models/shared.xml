<PropertyList>

    <!-- =============================================================== -->
    <!-- ALS Navigation Lights                                           -->
    <!-- =============================================================== -->

    <!-- Red navigation light on port side (left) -->
    <model>
        <name>nav-light-left</name>
        <path>Effects/lights/procedural_light_nav_left.xml</path>
        <offsets>
            <x-m>  9.3464</x-m>
            <y-m>-20.7950</y-m>
            <z-m>  0.9600</z-m>
        </offsets>
    </model>

    <!-- Green navigation light on starboard side (right) -->
    <model>
        <name>nav-light-right</name>
        <path>Effects/lights/procedural_light_nav_right.xml</path>
        <offsets>
            <x-m> 9.3464</x-m>
            <y-m>20.7950</y-m>
            <z-m> 0.9600</z-m>
        </offsets>
    </model>

    <!-- White navigation light on tail -->
    <model>
        <name>nav-light-tail</name>
        <path>Effects/lights/procedural_light_nav_tail.xml</path>
        <offsets>
            <x-m>23.1897</x-m>
            <y-m>0.0</y-m>
            <z-m>1.5456</z-m>
        </offsets>
    </model>

    <animation>
        <type>select</type>
        <object-name>nav-light-left</object-name>
        <object-name>nav-light-right</object-name>
        <nopreview/>
        <condition>
            <and>
                <property>/sim/rendering/shaders/skydome</property>
                <property>sim/multiplay/generic/int[3]</property>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>nav-light-tail</object-name>
        <nopreview/>
        <condition>
            <and>
                <property>/sim/rendering/shaders/skydome</property>
                <property>sim/multiplay/generic/int[2]</property>
            </and>
        </condition>
    </animation>

    <!-- =============================================================== -->
    <!-- External Equipment                                              -->
    <!-- =============================================================== -->

    <!-- Pushback truck -->
    <model>
        <name>Pushback</name>
        <path>Models/Airport/Pushback/Goldhofert.xml</path>
        <offsets>
            <x-m>-17.5</x-m>
            <y-m>0</y-m>
            <z-m>-2.9</z-m>
        </offsets>
    </model>

    <!-- Power unit -->
    <model>
        <name>ExternalPowerUnit</name>
        <path>Aircraft/707/Models/epu.xml</path>
        <offsets>
            <x-m>-17.5</x-m>
            <y-m>7.0</y-m>
            <z-m>-2.92</z-m>
            <heading-deg> 25 </heading-deg>
        </offsets>
    </model>
    <animation>
        <type>select</type>
        <object-name>ExternalPowerUnit</object-name>
        <condition>
            <not>
                <property>sim/multiplay/generic/int[19]</property>
            </not>
            <property>sim/multiplay/generic/int[14]</property>
        </condition>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>ExternalPowerUnit</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-toggle</command>
                <property>b707/external-power-connected</property>
            </binding>
        </action>
    </animation>

    <!-- Fuel truck -->
    <model>
        <name>FuelTruck</name>
        <path>Aircraft/707/Models/fuel-truck.xml</path>
        <offsets>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.0</z-m>
        </offsets>
    </model>
    <animation>
        <type>select</type>
        <object-name>FuelTruck</object-name>
        <condition>
            <property>sim/multiplay/generic/float[13]</property>
            <not>
                <property>sim/multiplay/generic/int[19]</property>
            </not>
        </condition>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>FuelTruck</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    setprop("/b707/ground-service/fuel-truck/transfer", 0);
                    setprop("/b707/ground-service/fuel-truck/connect", 0);
                    setprop("/b707/ground-service/fuel-truck/enable", 0);
                    setprop("/b707/ground-service/fuel-truck/clean", 0);
                    setprop("/b707/ground-service/fuel-truck/state", 0);
            ]]></script>
            </binding>
        </action>
    </animation>

    <!-- Stairways -->
    <model>
        <name>frontStair</name>
        <path>Aircraft/707/Models/stairs.xml</path>
        <offsets>
            <x-m>-15.39</x-m>
            <y-m>-5.1</y-m>
            <z-m>-2.92</z-m>
            <heading-deg>-6</heading-deg>
        </offsets>
    </model>
    <model>
        <name>rearStair</name>
        <path>Aircraft/707/Models/stairs.xml</path>
        <offsets>
            <x-m>16.0</x-m>
            <y-m>-4.2</y-m>
            <z-m>-2.92</z-m>
            <heading-deg>10</heading-deg>
        </offsets>
    </model>
    <animation>
        <type>select</type>
        <object-name>frontStair</object-name>
        <condition>
            <not>
                <property>sim/multiplay/generic/int[19]</property>
            </not>
            <or>
                <property>sim/multiplay/generic/float[6]</property>
                <property>sim/multiplay/generic/float[7]</property>
                <property>sim/multiplay/generic/float[12]</property>
                <property>sim/multiplay/generic/float[15]</property>
                <property>sim/multiplay/generic/float[16]</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>rearStair</object-name>
        <condition>
            <not>
                <property>sim/multiplay/generic/int[19]</property>
            </not>
            <or>
                <property>sim/multiplay/generic/float[6]</property>
                <property>sim/multiplay/generic/float[7]</property>
                <property>sim/multiplay/generic/float[12]</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>frontStair</object-name>
        <property>sim/multiplay/generic/float[6]</property>
        <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>0.2</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>1.0</ind>
                <dep>4.55</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>rearStair</object-name>
        <property>sim/multiplay/generic/float[7]</property>
        <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>0.2</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>1.0</ind>
                <dep>4.0</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>frontStair</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>nasal</command>
                <script>b707.doorsystem.pasfrontexport();</script>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>rearStair</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>nasal</command>
                <script>b707.doorsystem.pasrearexport();</script>
            </binding>
        </action>
    </animation>

    <!-- Cargo equipment -->
    <model>
        <name>Loader1</name>
        <path>Aircraft/707/Models/loader.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>-6.2</y-m>
            <z-m>0</z-m>
        </offsets>
    </model>
    <animation>
        <type>select</type>
        <object-name>Loader1</object-name>
        <condition>
            <and>
                <not>
                    <property>sim/multiplay/generic/int[19]</property>
                </not>
                <property>sim/multiplay/generic/int[9]</property>
                <or>
                    <property>sim/multiplay/generic/float[6]</property>
                    <property>sim/multiplay/generic/float[7]</property>
                    <property>sim/multiplay/generic/float[12]</property>
                    <property>sim/multiplay/generic/float[15]</property>
                </or>
            </and>
        </condition>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>Loader1</object-name>
        <property>sim/multiplay/generic/float[15]</property>
        <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>0.1</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>0.5</ind>
                <dep>6.2</dep>
            </entry>
            <entry>
                <ind>1.0</ind>
                <dep>6.2</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>Loader1</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>nasal</command>
                <script>b707.doorsystem.cargoexport();</script>
            </binding>
        </action>
    </animation>
    <model>
        <name>Loader2</name>
        <path>Aircraft/707/Models/belly.xml</path>
        <offsets>
            <x-m>0</x-m>
            <y-m>6.2</y-m>
            <z-m>0</z-m>
        </offsets>
    </model>
    <animation>
        <type>select</type>
        <object-name>Loader2</object-name>
        <condition>
            <and>
                <not>
                    <property>sim/multiplay/generic/int[19]</property>
                </not>
                <property>sim/multiplay/generic/int[9]</property>
                <or>
                    <property>sim/multiplay/generic/float[6]</property>
                    <property>sim/multiplay/generic/float[7]</property>
                    <property>sim/multiplay/generic/float[12]</property>
                    <property>sim/multiplay/generic/float[16]</property>
                </or>
            </and>
        </condition>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>Loader2</object-name>
        <property>sim/multiplay/generic/float[16]</property>
        <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>0.2</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind> 1.0</ind>
                <dep>-6.2</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>Loader2</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>nasal</command>
                <script>b707.doorsystem.bellyexport();</script>
            </binding>
        </action>
    </animation>
    <model>
        <name>Loader3</name>
        <path>Aircraft/707/Models/bellyLoader.xml</path>
        <offsets>
            <x-m>0.0</x-m>
            <y-m>6.2</y-m>
            <z-m>0.0</z-m>
        </offsets>
    </model>
    <animation>
        <type>select</type>
        <object-name>Loader3</object-name>
        <condition>
            <and>
                <not>
                    <property>sim/multiplay/generic/int[19]</property>
                </not>
                <not>
                    <property>sim/multiplay/generic/int[9]</property>
                </not>
                <or>
                    <property>sim/multiplay/generic/float[6]</property>
                    <property>sim/multiplay/generic/float[7]</property>
                    <property>sim/multiplay/generic/float[12]</property>
                    <property>sim/multiplay/generic/float[16]</property>
                </or>
            </and>
        </condition>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>Loader3</object-name>
        <property>sim/multiplay/generic/float[16]</property>
        <interpolation>
            <entry>
                <ind>0.0</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind> 1.0</ind>
                <dep>-7.0</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>Loader3</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>nasal</command>
                <script>b707.doorsystem.bellyexport();</script>
            </binding>
        </action>
    </animation>

</PropertyList>
