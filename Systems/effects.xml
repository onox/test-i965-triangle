<PropertyList>

    <!-- ================================================================== -->
    <!-- Glass effects                                                      -->
    <!-- ================================================================== -->

    <filter>
        <name>Aircraft Effect Frost Level Left Side</name>
        <type>noise-spike</type>
        <max-rate-of-change>0.1</max-rate-of-change>
        <enable>
            <condition>
                <not>
                    <property>/sim/freeze/replay-state</property>
                </not>
            </condition>
        </enable>
        <input>
            <expression>
                <difference>
                    <value>1.0</value>
                    <property>/b707/anti-ice/window-alpha-capt</property>
                </difference>
            </expression>
            <scale>2.0</scale>
        </input>
        <output>
            <property>/environment/aircraft-effects/frost-level-left</property>
        </output>
    </filter>

    <filter>
        <name>Aircraft Effect Frost Level Right Side</name>
        <type>noise-spike</type>
        <max-rate-of-change>0.1</max-rate-of-change>
        <enable>
            <condition>
                <not>
                    <property>/sim/freeze/replay-state</property>
                </not>
            </condition>
        </enable>
        <input>
            <expression>
                <difference>
                    <value>1.0</value>
                    <property>/b707/anti-ice/window-alpha-fo</property>
                </difference>
            </expression>
            <scale>2.0</scale>
        </input>
        <output>
            <property>/environment/aircraft-effects/frost-level-right</property>
        </output>
    </filter>

</PropertyList>
