        <object-name>switch.002</object-name>
        <object-name>switch.003</object-name>
        <object-name>switch.004</object-name>
        <object-name>bezel</object-name>
        <object-name>bezel.001</object-name>
        <condition>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <red>0.2</red>
            <green>0.2</green>
            <blue>0.2</blue>
            <factor-prop>/systems/electrical/outputs/overhead-dim</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>face</object-name>
        <object-name>face.001</object-name>
        <object-name>needle</object-name>
        <object-name>needle.001</object-name>
        <object-name>needleB</object-name>
        <object-name>needleB.001</object-name>
        <object-name>sup</object-name>
        <object-name>sup.001</object-name>
        <condition>
            <less-than>
                <property>/systems/electrical/outputs/cabin-dim</property>
                <value>0.8</value>
            </less-than>
        </condition>
        <emission>
            <red>0.6</red>
            <green>0.4</green>
            <blue>0.3</blue>
            <factor-prop>/systems/electrical/outputs/overhead-dim</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>face</object-name>
        <object-name>face.001</object-name>
        <object-name>needle</object-name>
        <object-name>needle.001</object-name>
        <object-name>needleB</object-name>
        <object-name>needleB.001</object-name>
        <object-name>sup</object-name>
        <object-name>sup.001</object-name>
        <condition>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
            <property>/systems/electrical/outputs/overhead-dim</property>
        </condition>
        <emission>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
            <factor-prop>/systems/electrical/outputs/overhead-dim</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>LampGreenON</object-name>
        <object-name>LampGreenON.001</object-name>
        <object-name>LampGreenON.002</object-name>
        <object-name>LampGreenON.003</object-name>
        <emission>
            <red>   0 </red>
            <green> 1.0 </green>
            <blue>  0 </blue>
        </emission>
    </animation>
    <animation>
        <type>material</type>
        <object-name>LampAmberON.004</object-name>
        <emission>
            <red>   1.0 </red>
            <green> 0.8 </green>
            <blue>  0.4 </blue>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>LampGreenON</object-name>
        <condition>
            <greater-than>
                <property>/b707/ess-bus</property>
                <value>20</value>
            </greater-than>
            <or>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>1</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[0]</property>
                </and>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>2</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[0]</property>
                </and>
                <property>/controls/test/warn-knob</property>

                <!-- Wing anti-ice ground test -->
                <equals>
                    <property>/b707/anti-ice/switch</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>LampGreenON.001</object-name>
        <condition>
            <greater-than>
                <property>/b707/ess-bus</property>
                <value>20</value>
            </greater-than>
            <or>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>1</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[1]</property>
                </and>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>2</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[1]</property>
                </and>
                <property>/controls/test/warn-knob</property>

                <!-- Wing anti-ice ground test -->
                <equals>
                    <property>/b707/anti-ice/switch</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>LampGreenON.002</object-name>
        <condition>
            <greater-than>
                <property>/b707/ess-bus</property>
                <value>20</value>
            </greater-than>
            <or>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>3</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[2]</property>
                </and>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>2</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[2]</property>
                </and>
                <property>/controls/test/warn-knob</property>

                <!-- Wing anti-ice ground test -->
                <equals>
                    <property>/b707/anti-ice/switch</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>LampGreenON.003</object-name>
        <condition>
            <greater-than>
                <property>/b707/ess-bus</property>
                <value>20</value>
            </greater-than>
            <or>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>3</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[3]</property>
                </and>
                <and>
                    <equals>
                        <property>/b707/anti-ice/valve-selector</property>
                        <value>2</value>
                    </equals>
                    <property>/b707/anti-ice/engine-inlet[3]</property>
                </and>
                <property>/controls/test/warn-knob</property>

                <!-- Wing anti-ice ground test -->
                <equals>
                    <property>/b707/anti-ice/switch</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>LampAmberON.004</object-name>
        <condition>
            <greater-than>
                <property>/b707/ess-bus</property>
                <value>20</value>
            </greater-than>
            <or>
                <property>/controls/engines/engine[0]/fire</property>
                <property>/controls/engines/engine[1]/fire</property>
                <property>/controls/engines/engine[2]/fire</property>
                <property>/controls/engines/engine[3]/fire</property>

                <and>
                    <equals>
                        <property>/b707/anti-ice/switch</property>
                        <value>2</value>
                    </equals>
                    <greater-than>
                        <property>/b707/anti-ice/total-air-temperature</property>
                        <value>0</value>
                    </greater-than>
                </and>

                <property>/controls/test/warn-knob</property>

                <!-- Wing anti-ice ground test -->
                <equals>
                    <property>/b707/anti-ice/switch</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

