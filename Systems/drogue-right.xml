<PropertyList include="Aircraft/ExpansionPack/Systems/refueling-drogue.xml">

    <params>
        <inputs>
            <yaw>/refueling/drogues/drogue[0]/commands/heading-deg</yaw>
            <pitch>/refueling/drogues/drogue[0]/commands/pitch-deg</pitch>
            <length>/refueling/drogues/drogue[0]/commands/length-m</length>
            <active>/refueling/drogues/drogue[0]/contact/active</active>
            <enabled>/refueling/drogues/drogue[0]/enabled</enabled>

            <default-length>/refueling/drogues/drogue[0]/settings/default-length-m</default-length>
            <max-length>/refueling/drogues/drogue[0]/settings/max-length-m</max-length>

            <drogue-yaw>/refueling/drogues/drogue[0]/commands/drogue-yaw-deg</drogue-yaw>
            <drogue-pitch>/refueling/drogues/drogue[0]/commands/drogue-pitch-deg</drogue-pitch>
        </inputs>
        <internal>
            <length-factor>/refueling/drogues/drogue[0]/internal/length-factor</length-factor>
        </internal>
        <outputs>
            <yaw>/engines/engine[8]/n1</yaw>
            <pitch>/engines/engine[8]/n2</pitch>
            <length>/engines/engine[8]/rpm</length>

            <drogue-yaw>/engines/engine[7]/n1</drogue-yaw>
            <drogue-pitch>/engines/engine[7]/n2</drogue-pitch>
        </outputs>
    </params>

</PropertyList>
