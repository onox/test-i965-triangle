    <!-- Ground test or operate switch -->
    <animation>
        <type>rotate</type>
        <object-name>switch</object-name>
        <property>/b707/anti-ice/switch</property>
        <interpolation>
            <entry><ind>1.0</ind><dep>-50.0</dep></entry>
            <entry><ind>0.0</ind><dep>  0.0</dep></entry>
            <entry><ind>2.0</ind><dep> 50.0</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>-0.19</y-m>
            <z-m> 0.032</z-m>
        </center>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>plane.001</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/b707/anti-ice/switch</property>
                <value type="double">1</value>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>/sim/sound/switch2</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/b707/anti-ice/switch</property>
                    <value type="double">0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>plane.002</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
            	var bt = getprop("/b707/anti-ice/switch") or 0;
            	if(bt == 2){
            		setprop("/b707/anti-ice/switch", 0);
            	}else{
            		setprop("/b707/anti-ice/switch", 2);
            	}
            </script>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>/sim/sound/switch2</property>
            </binding>
        </action>
    </animation>

    <!-- Wing temperature selector -->
    <animation>
        <type>knob</type>
        <object-name>turn.001</object-name>
        <drag-scale-px>20.0</drag-scale-px>
        <property>/b707/anti-ice/duct-temp-select</property>
        <factor>-22.5</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m> 0.0</x-m>
            <y-m>-0.239</y-m>
            <z-m> 0.0056</z-m>
        </center>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>/b707/anti-ice/duct-temp-select</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>/sim/sound/switch3</property>
            </binding>
        </action>

        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>anti-ice-duct-temp</tooltip-id>
                <label>Duct temperature: %s</label>
                <mapping>nasal</mapping>
                <property>/b707/anti-ice/duct-temp-select</property>
                <script>
                    var modes = ["OUTBOUND", "INBOUND"];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

