<PropertyList>
<key n="127">
	<name>Delete</name>
	<desc>Toggle Reversers</desc>
  <binding>
      <command>nasal</command>
      <script>b707.togglereverser();</script>
  </binding>
</key>
<key n="108">
  <name>L</name>
  <desc>toggle landing lights</desc>
  <binding>
      <command>nasal</command>
      <script>b707.toggleLandingLights();</script>
  </binding>
</key>
<key n="121">
  <name>y</name>
  <desc>toggle yokes</desc>
  <binding>
      <command>property-toggle</command>
      <property>sim/yokes-visible</property>
  </binding>
</key>

<key n="94"> <!-- ^ -->
    <name>short start</name>
    <desc>Test startup</desc>
  <binding>
      <command>nasal</command>
      <script>b707.short_startup();</script>
  </binding>
</key>

<key n="257">
    <name>F1</name>
    <desc>Checklists</desc>
    <binding>
      <command>dialog-show</command>
      <dialog-name>checklist</dialog-name>
    </binding>
</key>

<key n="263">
	<name>F7</name>
	<desc>Toggle racetrack pattern AP</desc>
	<binding>
        <command>property-toggle</command>
        <property>/aircraft/afcs/locks/pattern</property>
	</binding>
</key>

<key n="264">
	<name>F8</name>
	<desc>Show router manager</desc>
	<binding>
	<command>dialog-show</command>
	<dialog-name>route-manager</dialog-name>
	</binding>
</key>

<key n="265">
    <name>F9</name>
    <desc>Pop up Fuel and Weight dialog</desc>
    <binding>
        <command>nasal</command>
        <script>b707.WeightFuelDialog()</script>
    </binding>
</key>

    <key n="261">
        <name>F5</name>
        <desc>Toggle engineer view</desc>
        <binding>
            <command>nasal</command>
            <script>b707.changeView(103);</script>
        </binding>
    </key>

    <key n="262">
        <name>F6</name>
        <desc>Toggle overhead view</desc>
        <binding>
            <command>nasal</command>
            <script>b707.changeView(104);</script>
        </binding>
    </key>

    <key n="267">
        <name>F11</name>
        <desc>Toggle autopilot view</desc>
        <binding>
            <command>nasal</command>
            <script>b707.changeView(102);</script>
        </binding>
    </key>

    <key n="100">
        <name>d</name>
        <desc>Disconnect refueling boom</desc>
        <binding>
            <command>nasal</command>
            <script>boom.tracking_updater.disconnect()</script>
        </binding>
    </key>

    <key n="68">
        <name>D</name>
        <desc>Disconnect refueling boom immediately</desc>
        <mod-shift>
            <binding>
                <command>nasal</command>
                <script>boom.tracking_updater.disconnect_fast()</script>
            </binding>
        </mod-shift>
    </key>

    <key n="114">
        <name>r</name>
        <desc>Move refueling boom to ready position</desc>
        <binding>
            <command>nasal</command>
            <script>boom.tracking_updater.ready()</script>
        </binding>
    </key>

<key n="2">
  <name>Ctrl + b</name>
  <desc>Speedbrakes/Spoiler full</desc>  
  <binding>
		  <command>nasal</command>
		  <script>b707.fullSpeedbrakes();</script>
  </binding>
</key>

</PropertyList>
