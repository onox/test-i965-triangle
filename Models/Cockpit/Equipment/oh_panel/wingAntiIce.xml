            <entry><ind>  0.0</ind><dep>  0.0</dep></entry>
            <entry><ind>250.0</ind><dep>225.0</dep></entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y> 0</y>
            <z> 0</z>
        </axis>
        <center>
            <x-m> 0.0</x-m>
            <y-m>-0.2565</y-m>
            <z-m> 0.0459</z-m>
        </center>
    </animation>

    <animation>
